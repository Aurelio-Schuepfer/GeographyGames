<Window x:Class="Geography_Games_42.LügenTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LügenTest" Background="#363636" Height="650" Width="900" ResizeMode="CanResize">

    
    <Viewbox Stretch="Uniform">
        <Grid>
     
            <Image Source="pack://application:,,,/Assets/Icon/TrueorFalse.png"
                   Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0"/>

       
            <Viewbox Margin="110,53,110,472">
                <TextBlock Name="FrageText"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontFamily="Comic Sans MS"
                           FontSize="40"
                           Foreground="White"/>
            </Viewbox>

            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
                <Button Name="Wahrheit"
                        Content="Wahrheit"
                        Background="Lime"
                        Foreground="Black"
                        Height="97"
                        Width="350"
                        FontSize="50"
                        FontFamily="Comic Sans MS"
                        Click="Wahrheit_Click"
                        Margin="0,0,20,0"/>

                <Button Name="Lüge"
                        Content="Lüge"
                        Background="MediumVioletRed"
                        Foreground="Black"
                        Height="97"
                        Width="350"
                        FontSize="50"
                        FontFamily="Comic Sans MS"
                        Click="Lüge_Click"/>
            </StackPanel>

           
            <Button BorderBrush="#363636"
                    Content="Zurück"
                    HorizontalAlignment="Left"
                    FontSize="30"
                    Foreground="White"
                    Background="#363636"
                    VerticalAlignment="Top"
                    Height="66"
                    Width="97"
                    Click="Button_Click"
                    Margin="10,0,0,0"/>

           
            <TextBlock Name="ScoreText"
                       TextAlignment="Left"
                       FontFamily="Comic Sans MS"
                       FontSize="30"
                       Foreground="White"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="20"
                       Text="Score:"/>
        </Grid>
    </Viewbox>
</Window>
