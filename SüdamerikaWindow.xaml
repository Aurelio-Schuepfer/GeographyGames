        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geography_Games_42"
        mc:Ignorable="d"
        Title="SüdamerikaWindow" Height="650" Width="900" Background="White">
    <Viewbox Stretch="Uniform">
        <Grid>
            <Image Source="/Assets/CountryMaps/SouthAmericaMap.png" Width="900" Height="650" Margin="0,1,0,-1"/>

            <TextBlock Name="LandText" HorizontalAlignment="Left" Margin="10,12,0,0" TextWrapping="Wrap" FontFamily="Comic Sans MS" Text="Finde:" TextAlignment="Left" FontSize="30" VerticalAlignment="Top" Height="46" Width="481"/>
            <TextBlock x:Name="FeedbackText" HorizontalAlignment="Left" Margin="10,59,0,0" TextWrapping="Wrap" FontFamily="Comic Sans MS" Text="Geratenes Land" FontSize="30" VerticalAlignment="Top" Height="122" TextAlignment="Left" Width="251"/>
            <Button Content="Zurück" HorizontalAlignment="Left" Margin="782,584,0,0" VerticalAlignment="Top" Height="56" Width="108" FontFamily="Comic Sans MS" FontSize="28" Click="Button_Click" Background="Transparent" BorderBrush="Transparent"/>
            <TextBlock x:Name="ScoreText" HorizontalAlignment="Left" Margin="696,21,0,0" TextWrapping="Wrap" FontFamily="Comic Sans MS" Text="Score: 0/19" TextAlignment="Left" FontSize="30" VerticalAlignment="Top" Height="41" Width="194"/>
            <Button Name="ImageButton" Margin="9,548,825,-14" BorderBrush="Transparent" Background="Transparent" Click="Info_Click">
                <Button.Content>
                    <Image Source="pack://application:,,,/Assets/Icon/info.png" Stretch="Uniform"/>
                </Button.Content>
            </Button>
            <Button x:Name="KolumbienButton" Background="Transparent" BorderBrush="Transparent" Click="Kolumbien_Click" Margin="465,39,369,512" RenderTransformOrigin="-0.98,2.201" Tag="Kolumbien" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-62.04"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <TextBlock x:Name="WinText" Foreground="Green" HorizontalAlignment="Left" Margin="-28,218,0,0" TextWrapping="Wrap" FontFamily="Comic Sans MS" Text="Du hast gewonnen!" FontSize="60" VerticalAlignment="Top" Height="181" TextAlignment="Center" Width="358" Visibility="Hidden" />
            <Button x:Name="Reset" Width="200" Margin="691,483,9,77" Content="Reset" FontFamily="Comic Sans MS" FontSize="50" Background="Lime" Click="Reset_Click" Visibility="Hidden"/>
