<Window x:Class="Geography_Games_42.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geography_Games_42"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="800" Background="#363636">
    <Viewbox Stretch="Uniform">
        <Grid>
        <Label Content="Info" FontFamily="Comic Sans MS" FontSize="40" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Label Content="- Georgien, Aserbaidschan, Armenien, Russland und Türkei gehören zu Europa und Asien" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top"/>
        <Label Content="- Klicke immer auf die Mitte von einem Land um zu garantieren das man das richtige wählt" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,330,0,0" VerticalAlignment="Top"/>
        <Label Content="- Wenn ein Land falsch geraten wurde muss man immernoch das richtige erraten" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top"/>
        <Label Content="- Das Spiel ist geographisch nicht ganz korrekt es geht einfach um die Länder auf der Map" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,208,0,0" VerticalAlignment="Top"/>
        <Label Content="- Man gewinnt wenn man jedes Land beim ersten versuch richtig erraten hat" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top"/>
        <Label Content="- Sehr kleine Länder sind nicht im Spiel, da man diese fast nicht sehen kann" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top"/>
        <Label Content="- Viel Glück und Spass beim erraten und Danke fürs Spielen" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top"/>
            <Label Content="- Wenn ein Land einmal falsch geraten wurde gibt es dafür keinen Punkt mehr diese Runde" FontFamily="Comic Sans MS" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,248,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Viewbox>
</Window>
